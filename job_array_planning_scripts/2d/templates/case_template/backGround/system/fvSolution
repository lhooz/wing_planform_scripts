solvers
{
    p
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.01;
	minIter 	2;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "pcorr.*"
    {
        $pFinal;
    }

    U
    {
        /*solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-8;
        relTol          0.01;
	minIter 	2;*/

        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.01;
	minIter 	2;
    }

    UFinal
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    //momentumPredictor   true;
    nOuterCorrectors    20;
    nCorrectors         4;
    nNonOrthogonalCorrectors 2;

    oversetAdjustPhi    true;
    //correctPhi          true;
    ddtCorr             true;

    residualControl
    {
        U
        {
                tolerance  1e-6;
                relTol      0;
        }
        p
        {
                tolerance  1e-6;
                relTol      0;
        }
     }
}
