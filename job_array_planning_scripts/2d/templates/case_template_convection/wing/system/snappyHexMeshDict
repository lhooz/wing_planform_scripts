FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    "wing2d.stl"
    {
        type    triSurfaceMesh;
        name    wing;
    }

    refinementCyl
    {
        /*type    searchableBox;
        min     (-5 -5 -1);
        max     ( 5  5  1);*/
    	type            searchableCylinder;
    	point1          (0.0 0.0 -1.0);
    	point2          (0.0 0.0  1.0);
    	radius          5.0;
    }

};

castellatedMeshControls
{
    maxLocalCells 1000000;
    maxGlobalCells 20000000;
    minRefinementCells 10;
    maxLoadUnbalance 0.10;

    nCellsBetweenLevels 8;

    features 
    (
        { 
        file "wing2d.eMesh"; 
        level 4;
        }
    );

    refinementSurfaces
    {
        wing
        {
            level (3 3);
        }
    }

    resolveFeatureAngle 60;

    refinementRegions
    {
        refinementCyl
        {
            mode inside;
            levels ((1e15 2));
        }
    }

    locationInMesh (-0.5 0 0);
    allowFreeStandingZoneFaces true;
}

snapControls
{
    nSmoothPatch 3;
    tolerance 4.0;
    nSolveIter 30;
    nRelaxIter 5;
    nFeatureSnapIter 10;
    implicitFeatureSnap true;
    explicitFeatureSnap false;
    multiRegionFeatureSnap true;
}

addLayersControls
{
    relativeSizes true;

    layers
    {
        wing
        {
            nSurfaceLayers 3;
        }
    }

    meshShrinker    displacementMotionSolver;
    solver          displacementLaplacian;
    displacementLaplacianCoeffs
    {
        diffusivity     inverseDistance (wing);
    }

    expansionRatio 1.3;
    finalLayerThickness 0.9;
    minThickness 0.05;
    nGrow 5;
    featureAngle 180;
    nRelaxIter 50;
    nSmoothSurfaceNormals 3;
    nSmoothNormals 5;
    nSmoothThickness 10;
    maxFaceThicknessRatio 0.5;
    maxThicknessToMedialRatio 0.3;
    minMedianAxisAngle 90;
    nBufferCellsNoExtrude 1;
    nLayerIter 100;
}

meshQualityControls
{
    maxNonOrtho 60;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
    minVol -1;
    minTetQuality -1;
    minArea -1;
    minTwist 0.01;
    minDeterminant 0.001;
    minFaceWeight 0.05;
    minVolRatio 0.01;
    minTriangleTwist -1;
    nSmoothScale 4;
    errorReduction 0.75;
    relaxed
    {
        maxNonOrtho 75;
    }
}

mergeTolerance 1e-6;

